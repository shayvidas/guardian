<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="telecom.com.guardian.guardian.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_above="@+id/centerLayout"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/skyline_background"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardian"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:id="@+id/healind_text"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Screenshot POC"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/healind_text"
            android:id="@+id/secondary_text"
            android:textSize="15dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:id="@+id/centerLayout"
        android:layout_height="180dp">


        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="150dp"
            android:max="60"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="27dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekbarTextView"
            android:layout_toRightOf="@+id/seekBar"
            android:layout_alignBottom="@+id/seekBar"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:text="0"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar"
            android:layout_alignLeft="@+id/seekBar"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:text="Service is - Off"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/seekBar"
            android:layout_alignLeft="@+id/seekBar"
            android:textSize="15dp"
            android:text="Time Intervals For Screenshots"/>


    </RelativeLayout>




    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="View Pictures Gallery"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/centerLayout"
        android:id="@+id/pictures_gallery_button"
        />



</RelativeLayout>
